@using Microsoft.AspNetCore.Components.Authorization
@using System.Reflection
@using Rentbook.Pages

    <CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="@LazyLoadedAssemblies">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(CustomLayout)">
                    <NotAuthorized>
                        <h3>Not authorized</h3>
                        <p>You are not authorized to access this resource.</p>
                        <p>Please <a href="/login">log in</a>.</p>
                    </NotAuthorized>
                    <Authorizing>
                        <p>Authorizing...</p>
                    </Authorizing>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(CustomLayout)">
                    <p>Sorry, there's nothing at this address.</p>
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingAuthenticationState>





@code {
    private IEnumerable<Assembly> LazyLoadedAssemblies = new[] {
        typeof(Houses).Assembly
    };
}





























